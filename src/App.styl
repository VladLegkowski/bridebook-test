@import './Variables'

.app-logo
  height 80px

.app-header
  background-color $blue-crush
  height 150px
  padding 20px
  color white

  .app-header-inner,
  .container
    height 100%

  .app-header-inner
    display flex
    align-items center
    justify-content center

.app-intro
  background $soft
  border 1px solid $alto
  border-radius 5px
  margin 10px 0
  padding 15px

.container
  width 1240px
  padding 0px 20px
  margin 0px auto


.notification-wrapper
  padding 15px
  margin 10px 0
  border 1px dotted grey

.button
  border-radius 20px
  padding 8px 20px
  font-size 14px
  background transparent
  border 2px solid
  color $mint
  border-color $mint
  outline none
  user-select none
  white-space nowrap
  cursor pointer
  text-indent 0px
  text-shadow none

  &:active,
  &:hover
    background-color $mint
    color #fff

.notification-triggers
  display flex
  justify-content center
  .button
    margin 0px 5px
